@model SignalRDev.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="login-box">
    <div class="login-logo">
        <a href="/"><b>SignalR</b>Dev</a>
    </div>
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Hesabınıza giriş yapın</p>

            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="input-group mb-3">
                    <input asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                
                <div class="input-group mb-3">
                    <input asp-for="Password" class="form-control" placeholder="Şifre" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input asp-for="RememberMe" type="checkbox" id="remember" />
                            <label for="remember">
                                Beni Hatırla
                            </label>
                        </div>
                    </div>
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                    </div>
                </div>
            </form>

            <p class="mb-1 mt-3">
                <a href="#">Şifremi unuttum</a>
            </p>
            <p class="mb-0">
                <a asp-action="Register" class="text-center">Yeni hesap oluştur</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 